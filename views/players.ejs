<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Players- IPL</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<style>
  body {
    background-image: url('https://3.bp.blogspot.com/-LoEFG5r1Gi8/XKI0qa1FDMI/AAAAAAAAB1Q/ZC08KR5_E889IVwMz7Pyhqg-Qo8Uta2kACLcBGAs/s1600/ipl%2Bbackground%2Bhunter%2Bcreation.jpg');
    background-repeat: no-repeat;
  }
</style>

<body>
  <!-- ------------------------------------NAVBAR-------------------------------------- -->
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home" style="color: aquamarine;">IPL Indian Premier League</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/home" style="color: aquamarine;">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/fetch/0" style="color: aquamarine;">View Players</a>
          </li>

        </ul>

      </div>
    </div>
  </nav>
  <!-- ------------------------------------CARD-------------------------------------- -->
  <div class="card"
    style="width: 18rem;height: 500px;position: fixed;top: 15%;left: 40%;background-color: #202124;text-align: center;color: seashell;">
    <img src="<%- img %>" class="card-img-top" alt="..." height="100%" width="100%" style="object-fit: cover;">
    <div class="card-body">
      <h5 class="card-title">
        <%- name %>
      </h5>

      <div class="card">
        <ul class="list-group list-group-flush">
          <li class="list-group-item" style="background-color: steelblue;font-size: large;">
            <%- desc%>
          </li>
          <li class="list-group-item" style="background-color: yellowgreen;font-size: large;">Team - <%- from %>
          </li>
          <li class="list-group-item" style="background-color: peachpuff;font-size: large;">Price - <%- price %>
          </li>

        </ul>
      </div>

    </div>
  </div>
  <!-- ------------------------------------BUTTONS-------------------------------------- -->
  <div style="position: fixed;top: 85%;left: 40%">
    <button type="button" class="btn btn-primary" id="prevbtn">Previous Player</button>
    <button type="button" class="btn btn-success" id="resetbtn">Reset</button>
    <button type="button" class="btn btn-dark" id="nextbtn">Next Player</button>
  </div>
  <!-- ------------------------------------SCRIPT JS-------------------------------------- -->
  <script>
    let nextBtn = document.getElementById('nextbtn')
    let resetBtn = document.getElementById('resetbtn')
    let prevBtn = document.getElementById('prevbtn')
    let end = window.location.href;
    let index = parseInt(end.slice(end.length - 1))

    if (index == '0') {
      resetBtn.disabled = true;
      prevBtn.disabled = true;
    }

    else if (index == '6') {
      nextBtn.disabled = true



    }

    nextBtn.addEventListener('click', function () {
      index++
      window.location.href = index
    })

    resetBtn.addEventListener('click', function () {
      index = 0;
      window.location.href = index;
    })



    prevBtn.addEventListener('click', function () {

      index--;
      window.location.href = index;

    })

  </script>
</body>

</html>